<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color9"
    android:orientation="vertical"
    tools:context=".login.sifreDegistirActivity">


    <TextView
        android:id="@+id/tv_hint_sifreDegistir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="8dp"
        android:text="Şifreniz sıfırlandı. Aşağıdan yeni şifrenizi oluşturabilirsiniz.\n Lütfen daha sonra hatırlayabileceğiniz bir şifre seçmeye özen gösterin. ☺"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/color11" />

    <EditText
        android:id="@+id/tv_yeniSifre_sifreDegistir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="64dp"
        android:ems="10"
        android:hint="Yeni şifrenizi girin"
        android:inputType="textPassword"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/tv_sifreTekrar_sifreDegistir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="64dp"
        android:ems="10"
        android:hint="Yeni şifrenizi tekrar girin"
        android:inputType="textPassword"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="64dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sifremiDegistir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:onClick="btnSifreDegistirOnclick"
            android:text="Şifremi değiştir"
            android:textColor="@color/color10" />

        <Button
            android:id="@+id/btn_eskiSifremleDevamEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:background="@android:color/holo_red_dark"
            android:drawableRight="@drawable/cancel_logo"
            android:onClick="btnSifreAyniKalsinOnclick"
            android:paddingRight="5dp"
            android:text="İptal"
            android:textColor="@color/color10" />
    </LinearLayout>

</LinearLayout>