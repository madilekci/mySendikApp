<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".etkinlik.etkinlikOlustur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.75"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tv_baslik_etkinlikOlustur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.75"
            android:ems="10"
            android:hint="Etkinlik adını girin"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/tv_content_etkinlikOlustur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="10"
            android:ems="10"
            android:gravity="top"
            android:hint="Etkinlik açıklamasını girin"
            android:inputType="textCapSentences|textNoSuggestions|textMultiLine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.25"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fotografEkle_etkinlik"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Fotoğraf ekle"
                android:textColor="@color/color10"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_date_etkinlikOlustur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:padding="15dp"
                android:text="Tarih ve Saat seçiniz"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <Spinner
            android:id="@+id/sp_etkinlikOlustur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/spinnerHint"
            android:spinnerMode="dialog" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.8"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_etkinlikOlustur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="2dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[0]" />

        <Button
            android:id="@+id/btn_Olustur_etkinlik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/colorPrimary"
            android:text="Etkinlik Oluştur" />
    </LinearLayout>
</LinearLayout>