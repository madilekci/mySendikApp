<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:orientation="vertical"
    tools:context=".etkinlik.etkinlikOlustur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/sp_etkinlikOlustur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/primaryLightColor"
            android:spinnerMode="dialog" />

        <EditText
            android:id="@+id/tv_baslik_etkinlikOlustur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/primaryLightColor"
            android:ems="10"
            android:hint="Etkinlik adını girin"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textColor="@color/primaryLightTextColor"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/tv_content_etkinlikOlustur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.3"
            android:background="@color/primaryLightColor"
            android:ems="10"
            android:gravity="top"
            android:hint="Etkinlik açıklamasını girin"
            android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
            android:paddingLeft="5dp"
            android:textColor="@color/primaryLightTextColor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6.3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fotografEkle_etkinlik"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"


                android:drawableRight="@drawable/photo_camera_icon"
                android:paddingRight="5dp"
                android:shadowColor="#A8A8A8"
                android:textColor="@color/secondaryTextColor"
                android:shadowRadius="5"
                android:background="@drawable/button_shape_def"
                android:text="Fotoğraf Ekle"

                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_date_etkinlikOlustur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_def"
                android:drawableRight="@drawable/datetime_icon"
                android:paddingRight="5dp"
                android:shadowColor="#A8A8A8"

                android:shadowRadius="5"
                android:text="Tarih ve Saat seçiniz"
                android:textColor="@color/secondaryTextColor"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_etkinlikOlustur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="5.5"
        android:padding="2dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic[0]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical">
            s

            <CheckBox
                android:id="@+id/cb_firmaAdi_etkinlikOlustur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Çalıştığım firma adını göster"
                android:textColor="@color/primaryTextColor" />

            <CheckBox
                android:id="@+id/cb_telefon_etkinlikOlustur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Telefon numaramı göster"
                android:textColor="@color/primaryTextColor" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_Olustur_etkinlik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/button_shape_def"

            android:shadowColor="#A8A8A8"
            android:shadowRadius="5"
            android:text="Etkinlik Oluştur"
            android:textColor="@color/secondaryTextColor" />
    </LinearLayout>
</LinearLayout>