<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/disable_foreground"
    android:orientation="vertical"
    tools:context=".ActivityAyarlar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:background="@color/color11"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_sifreDegistir_ayarlar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@color/color10"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sifreDegistir_Ayarlar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/color10"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:text="Şifremi değiştir"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bildirimKapat_ayarlar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@color/color10"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bildirimKapat_ayarlar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color10"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:text="Bildirimleri Aç/Kapat"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/sw_bildirimKapat_ayarlar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:background="@color/color10"
                android:checked="true"

                android:textSize="12sp"
                android:theme="@style/switchButtonStyle" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_banner_ayarlar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_website_ayarlar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:background="@color/color10"
                android:drawableLeft="@drawable/icon_yeninova"
                android:fontFamily="@font/libre_baskerville"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_mail_ayarlar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:background="@color/color10"
                android:drawableLeft="@drawable/mail_icon_ayarlar"
                android:fontFamily="@font/libre_baskerville"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_adress_ayarlar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color10"
                android:drawableLeft="@drawable/adress_icon_ayarlar"
                android:fontFamily="@font/libre_baskerville"
                android:gravity="center"
                android:onClick="onClickAdress"
                android:paddingLeft="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>