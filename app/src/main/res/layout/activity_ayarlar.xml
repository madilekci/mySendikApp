<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color11"
    android:orientation="vertical"
    tools:context=".ayarlarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="2.5"
        android:background="@color/color11"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_weight="2"
            android:background="@color/color10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sifreDegistir_Ayarlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1.5"
                android:background="@color/color10"
                android:gravity="center"
                android:text="Şifremi değiştir"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="2"
            android:background="@color/color10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ayar1_ayarlar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color10"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:text="Bildirimleri Aç/Kapat"
                android:textColor="@color/colorPrimaryDark" />

            <Switch
                android:id="@+id/sw_bildirim_ayarlar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/color10"
                android:checked="true"
                android:textSize="12sp"
                android:theme="@style/switchButtonStyle"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="2"
            android:background="@color/color10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color10"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:text="Bildirim sesini Aç/Kapat"
                android:textColor="@color/colorPrimaryDark" />

            <Switch
                android:id="@+id/sw_bSes_ayarlar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/color10"
                android:checked="true"
                android:textSize="12sp"
                android:theme="@style/switchButtonStyle"

                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="100dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/yeninova_logo" />
    </LinearLayout>

</LinearLayout>