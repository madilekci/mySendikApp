<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="10dp"
    android:background="@color/color10">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_rv_four"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/color10"
        app:cardBackgroundColor="@color/color10"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/tv_title_rv_four"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5sp"

                android:text="Anket başlığı"
                android:textAllCaps="true"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_summary_rv_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5sp"
                android:text="Bu anket şunlarla ilgilidir, böyle insanlar şunun için bu anketi doldurmalıdır vs vs" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>