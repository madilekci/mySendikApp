<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sosyal.ActivityTwitter">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/tv_claimComplaint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:ems="10"
                android:gravity="start"
                android:hint="@string/claimComplaintHint"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@color/color11"
                    android:spinnerMode="dropdown" />

                <Button
                    android:id="@+id/btn_fotografEkle_talep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Fotoğraf ekle" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_talepGonder"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimary"
                android:text="GÖNDER"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:typeface="serif"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="0dp" />
        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/iv_deneme_talep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        tools:srcCompat="@tools:sample/backgrounds/scenic[0]" />

</LinearLayout>