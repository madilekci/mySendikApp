<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:orientation="vertical"
    tools:context=".sosyal.ActivityTwitter">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/sp_talep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/primaryLightColor"
            android:spinnerMode="dropdown">

        </Spinner>

        <EditText
            android:id="@+id/tv_konu_claimComplaint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2.7"
            android:background="@color/primaryLightColor"
            android:ems="10"
            android:gravity="top"
            android:hint="Konu"
            android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
            android:maxLines="1"
            android:padding="15dp"
            android:textColor="@color/primaryLightTextColor" />

        <EditText
            android:id="@+id/tv_aciklama_claimComplaint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1.2"
            android:background="@color/primaryLightColor"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/talepSikayetHint"
            android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
            android:padding="15dp"
            android:textColor="@color/primaryLightTextColor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <Button
            android:id="@+id/btn_fotografEkle_talep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_shape_def"

            android:drawableRight="@drawable/photo_camera_icon"
            android:paddingRight="10dp"
            android:shadowColor="#A8A8A8"
            android:shadowRadius="5"
            android:text="Fotoğraf ekle  "
            android:textColor="@color/secondaryTextColor"
            android:textColorLink="@color/secondaryTextColor"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_bilgiGizle_talepSikayet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bilgilerimi gizle"
            android:textColor="@color/secondaryTextColor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_talep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/backgrounds/scenic[0]" />

        <Button
            android:id="@+id/btn_talepGonder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="3.6"
            android:background="@drawable/button_shape_def"
            android:shadowColor="#A8A8A8"
            android:shadowRadius="5"
            android:text="GÖNDER"
            android:textColor="@color/secondaryTextColor"
            android:textColorLink="@color/secondaryTextColor"
            android:textSize="14sp"

            />
    </LinearLayout>


</LinearLayout>