<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mysendikapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".haberler.haberDetaylari"></activity>
        <activity android:name=".optionMenuActivities.ActivityAboutUs" />
        <activity android:name=".optionMenuActivities.ActivityContactUs" />
        <activity android:name=".haberler.newsFeed" />
        <activity
            android:name=".dashboard.SplashAct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".dashboard.ActivityDashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.loginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".optionMenuActivities.ActivityBranches"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActivityClaimComplaint"
            android:screenOrientation="portrait" />
        <activity
            android:name=".optionMenuActivities.ActivityBoardMembers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sosyal.ActivityTwitter"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sosyal.ActivityFacebook"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- IIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIIII; -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!--
 Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_notification" />
        <!--
 Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <meta-data
            android:name="firebase_messaging_auto_init_enabled"
            android:value="false" />
    </application>

</manifest>